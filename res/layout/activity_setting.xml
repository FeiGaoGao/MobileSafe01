<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itheima="http://schemas.android.com/apk/res/com.itheima.mobilesafe01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/title"
        android:text="设置中心" />

    <com.itheima.mobilesafe01.view.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         itheima:title="设置自动更新"  
         itheima:desc_on="自动更新已开启"
         itheima:desc_off="自动更新已关闭"/>
   
    <com.itheima.mobilesafe01.view.SettingItemView
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:desc_off="归属地显示已经关闭"
        itheima:desc_on="归属地显示已经开启"
        itheima:title="电话归属地显示设置" />
      <com.itheima.mobilesafe01.view.SettingClickView
        android:id="@+id/siv_click_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      />
       <com.itheima.mobilesafe01.view.SettingClickView
        android:id="@+id/siv_address_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      />

</LinearLayout>